<%= nav 'profile_tabs', 'edit_profile' %>
<%= nav 'edit_profile_nav', 'profile' %>

<%= box_wrapper do %>

	<%= form_for [:cp, @show], :html => { :multipart => true } do |f| %>
		<%= check_for_errors(@show) %>
	
		<fieldset>
		<legend>Show Profile for <%= @show.title %></legend>
		<ol>
		  <li>
			<label for="name">Name</label>
			<%= f.text_field :title %>
		  </li>

		  <li>
			<label for="genre">Genre</label>
			<%= f.text_field :genre %>
		  </li>
		  
		  <%= render :partial => "/cp/tags/tags_field", :locals => { :f => f, :record => @show } %>

		  <li>
			<label for="description">Description</label>
			<%= f.text_area :description, :size => '40x7' %>
		  </li>	
		</ol>
	  </fieldset>

	  	<fieldset>
		<legend>Show Picture</legend>
		<ol>
		  <li>
			<label>Current Picture</label>
			<%= display_avatar(Show.find(params[:id]), "medium") %>
		  </li>

		  <li>
			<label for="avatar">Upload New Picture</label>
			<%= f.file_field :avatar %>
		  </li>
		</ol>
	  </fieldset>

	  <fieldset>
	    <%= f.submit "Update Show Info" %>
	  </fieldset>
	<% end %>

<% end %>