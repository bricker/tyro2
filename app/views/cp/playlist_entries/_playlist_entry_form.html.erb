<div class="new_song_form">
	<%= form_for [:cp, schedule_event, playlist_entry], :remote => true do |f| %>
		<%= f.text_field :title, :placeholder => "title (required)", :class => 'playlist_entry_title' %>
		<%= f.text_field :artist, :placeholder => "artist (required)", :class => 'playlist_entry_artist' %>
		<%= f.text_field :album, :placeholder => "album", :class => 'playlist_entry_album' %>
		<%= hidden_field_tag 'form_num', '', :class => 'form_num' %>
		<div class='submit-button'><%= f.submit "", :class => 'disabled' %></div>
	<% end %>
</div>