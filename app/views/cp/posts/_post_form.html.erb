<%= form_for([:cp, @show, record]) do |f| %>
  	<legend><%= form_title %></legend>
  	<%= check_for_errors(record) %>
	
	<fieldset>
		<ol>
		  <li>
			<label for="title">Title</label>
			<%= f.text_field :title %>
		  </li>

		  <li>
			<label for="body">Body</label>
			<%= reply_box do %>
				<%= f.text_area :body, :size => '40x10' %>
			<% end %>
		  </li>
		</ol>
	</fieldset>
  
	<fieldset>
    	<%= f.submit submit %>
  	</fieldset>
<% end %>